// --------------------
// Powersuit Spawns
// --------------------

// Full Powersuit, replaces the original item
server int full_powersuit_megasphere_spawn_bias = 19;
server int full_powersuit_soulsphere_spawn_bias = -1;
server int full_powersuit_BFG9k_spawn_bias = -1;
server int full_powersuit_rocketlauncher_spawn_bias = -1;
server int full_powersuit_thunderbuster_spawn_bias = -1;
server bool full_powersuit_persistent_spawning = false;

// Full Powersuit, doesn't replace the original item
server int full_powersuit_norep_megasphere_spawn_bias = 19;
server int full_powersuit_norep_soulsphere_spawn_bias = -1;
server int full_powersuit_norep_BFG9k_spawn_bias = -1;
server int full_powersuit_norep_rocketlauncher_spawn_bias = -1;
server int full_powersuit_norep_thunderbuster_spawn_bias = -1;
server bool full_powersuit_norep_persistent_spawning = false;

// Full Powersuit, replaces the original item
server int powersuit_beacon_megasphere_spawn_bias = -1;
server int powersuit_beacon_soulsphere_spawn_bias = -1;
server int powersuit_beacon_BFG9k_spawn_bias = -1;
server int powersuit_beacon_rocketlauncher_spawn_bias = -1;
server int powersuit_beacon_thunderbuster_spawn_bias = -1;
server bool powersuit_beacon_persistent_spawning = false;

// Full Powersuit, doesn't replace the original item
server int powersuit_beacon_norep_megasphere_spawn_bias = -1;
server int powersuit_beacon_norep_soulsphere_spawn_bias = -1;
server int powersuit_beacon_norep_BFG9k_spawn_bias = -1;
server int powersuit_beacon_norep_rocketlauncher_spawn_bias = -1;
server int powersuit_beacon_norep_thunderbuster_spawn_bias = -1;
server bool powersuit_beacon_norep_persistent_spawning = false;

